{
    "name": "mteu/zealous-stan",
    "description": "A modest and highly subjective collection of commonly used phpstan rules",
    "license": "GPL-3.0-or-later",
    "type": "phpstan-extension",
    "authors": [
        {
            "name": "Martin Adler",
            "email": "mteu@mailbox.org",
            "homepage": "https://github.com/mteu",
            "role": "Maintainer"
        }
    ],
    "require": {
        "php": "~8.1.0 || ~8.2.0",
        "ergebnis/phpstan-rules": "^2.1",
        "mteu/docblock-rules": "^0.1",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-strict-rules": "^1.5",
        "spaze/phpstan-disallowed-calls": "^2.16",
        "symplify/phpstan-rules": "^12.3.0"
    },
    "require-dev": {
        "armin/editorconfig-cli": "^1.6",
        "ergebnis/composer-normalize": "^2.37"
    },
    "autoload": {
        "psr-4": {
            "Shrug\\ZealousStan\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    },
    "extra": {
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        }
    },
    "scripts": {
        "lint": [
            "@lint:composer",
            "@lint:editorconfig:fix"
        ],
        "lint:composer": "@composer normalize --no-check-lock --no-update-lock",
        "lint:editorconfig": "ec",
        "lint:editorconfig:fix": "@lint:editorconfig --fix"
    }
}
